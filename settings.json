{
  // ============================================================================
  //  ‚öôÔ∏è Visual Studio Code Professional Configuration ‚Äî Asadullah
  //  Purpose: Optimized for clarity, performance, and productivity in modern web development
  // ============================================================================

  // -------------------------------
  // üåà UI & Aesthetics
  // -------------------------------
  "workbench.colorTheme": "One Dark Pro Mix", // Sleek and focused dark theme
  "workbench.iconTheme": "material-icon-theme", // Minimalist icons for files/folders
  "window.zoomLevel": 0,

  // -------------------------------
  // üìù Editor: Core Settings
  // -------------------------------
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.rulers": [80],
  "editor.minimap.enabled": false,

  // -------------------------------
  // üî† Editor: Font & Cursor
  // -------------------------------
  "editor.fontFamily": "'Fira Code', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 22,
  "editor.lineHeight": 28,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorWidth": 2,

  // -------------------------------
  // üß© Editor: Whitespace & Highlighting
  // -------------------------------
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "gutter",

  // -------------------------------
  // üîß Bracket Pairing & Guides
  // -------------------------------
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.indentation": true,

  // -------------------------------
  // üßπ Formatting (Prettier)
  // -------------------------------
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.singleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 80,
  "prettier.arrowParens": "always",
  "prettier.bracketSpacing": true,
  "prettier.endOfLine": "lf",

  // -------------------------------
  // üíæ File Management
  // -------------------------------
  "files.autoSave": "onWindowChange",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",

  // -------------------------------
  // üß† AI & IntelliSense Enhancements
  // -------------------------------
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestSelection": "first",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlineSuggest.enabled": true, // For GitHub Copilot or IntelliCode

  // -------------------------------
  // üêû Error Lens Integration
  // Requires: 'Error Lens' Extension
  // -------------------------------
  "errorLens.enabled": true,
  "errorLens.fontSize": "14",
  "errorLens.errorBackgroundColor": "#f8d7da",
  "errorLens.warningBackgroundColor": "#fff3cd",
  "errorLens.infoBackgroundColor": "#d1ecf1",
  "errorLens.errorForegroundColor": "#721c24",
  "errorLens.warningForegroundColor": "#856404",
  "errorLens.infoForegroundColor": "#0c5460",
  "errorLens.showCodeActions": true,
  "errorLens.showErrorType": true,

  // -------------------------------
  // üíª Terminal Customization
  // -------------------------------
  "terminal.integrated.fontFamily": "'Fira Code', monospace",
  "terminal.integrated.fontSize": 14,

  // -------------------------------
  // ‚å®Ô∏è Optional Keybindings
  // Define in keybindings.json for better modularity
  // -------------------------------
  "keybindings": [
    {
      "key": "ctrl+shift+t",
      "command": "workbench.action.openRecent"
    },
    {
      "key": "ctrl+shift+v",
      "command": "markdown.showPreview"
    }
  ],

  // -------------------------------
  // üé® Custom CSS (Advanced - Optional)
  // -------------------------------
  "vscode_custom_css.imports": ["file:///D:/demo/custom.css"],

  // -------------------------------
  // üß≠ Navigation & Productivity
  // -------------------------------
  "breadcrumbs.enabled": true,
  "editor.codeLens": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,

  // -------------------------------
  // üöÄ Performance Optimizations
  // -------------------------------
  "files.maxMemoryForLargeFilesMB": 4096,
  "search.followSymlinks": false,
  "workbench.editor.enablePreview": false,

  // -------------------------------
  // üß© Extension Behavior
  // -------------------------------
  "extensions.ignoreRecommendations": false
}
